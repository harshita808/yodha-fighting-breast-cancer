<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:alpha="0.4"

            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text='"I can feel the edge of the grief washing up on my toes. It lingers there, then recedes like the tide. I am gonna let it come, and Iam going to LET IT GO."'
            android:layout_marginTop="147dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:textSize="24dp"
            android:textColor="#FFB9BF"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="-Taddie Diagnosed at 38"
            android:textSize="24dp"
            android:textColor="#FFB9BF"
            android:textAlignment="center"

            android:background="#00000000"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read full story here"
            android:textSize="24dp"
            android:textColor="#FFB9BF"
            android:textAlignment="center"

            android:background="#00000000"
            android:layout_marginTop="70dp"
            />

    </RelativeLayout>
</LinearLayout>