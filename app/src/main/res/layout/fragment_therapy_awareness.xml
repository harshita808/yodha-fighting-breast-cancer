<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#973961"
    >
    <include
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961"
        >

        <Button
            android:id="@+id/chemo"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:elevation="5dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/sen"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:background="@drawable/hover"
            android:layout_height="wrap_content"
            android:text="Chemotherapy"
            />
        <Button
            android:id="@+id/surgery"
            android:layout_below="@id/chemo"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:elevation="5dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:fontFamily="@font/sen"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:background="@drawable/hover"
            android:layout_height="wrap_content"
            android:text="Surgery"
            />
        <Button
            android:id="@+id/radiation"
            android:layout_below="@id/surgery"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:paddingTop="11dp"
            android:elevation="5dp"
            android:paddingBottom="11dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:fontFamily="@font/sen"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:background="@drawable/hover"
            android:layout_height="wrap_content"
            android:text="Radiation Therapy"
            />
        <Button
            android:id="@+id/hormonal"
            android:layout_below="@id/radiation"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:elevation="5dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:fontFamily="@font/sen"
            android:textColor="#FFFFFF"
            android:layout_marginRight="20dp"
            android:background="@drawable/hover"
            android:layout_height="wrap_content"
            android:text="Hormonal Therapy"
            />
    </RelativeLayout>
</LinearLayout>