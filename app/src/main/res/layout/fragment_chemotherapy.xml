<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#973961"
    >
    <include
        layout="@layout/toolbar"
        android:id="@+id/logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961"
        >

        <TextView
            android:id="@+id/chemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemotherapy"
            android:textColor="#FFB9BF"
            android:textSize="22dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sen"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_below="@id/chemo"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Using special medicines to shrink or kill the cancer cells"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sen"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_below="@id/text1"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Side Effects"
            android:textColor="#FFB9BF"
            android:layout_marginTop="40dp"
            android:textSize="22dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/sen"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certain chemotherapy drugs may cause potential side effects like nausea,vomiting,fatigue,nerve,damage,sore mouth,diarrhea,constipation and decreased blood counts."
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:fontFamily="@font/sen"
            android:padding="5dp"/>
        <Button
            android:id="@+id/FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_below="@id/text3"
            android:layout_marginTop="30dp"
            android:textSize="18dp"
            android:elevation="5dp"
            android:fontFamily="@font/sen"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hover"
            android:layout_marginRight="20dp"
            android:text="FAQ'S regarding Chemotherapy"
            />
        <TextView
            android:layout_above="@id/call"
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_marginBottom="42dp"
            android:text="You can also connect to our doctors to know more about Therapies for breast cancer by tapping on the call button"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="16dp"
            android:fontFamily="@font/sen"/>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/call"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Call  "
            android:fontFamily="@font/sen_regular"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:paddingLeft="32dp"
            android:layout_marginBottom="35dp"
            android:elevation="5dp"
            android:paddingTop="9dp"
            android:paddingBottom="12dp"
            android:paddingRight="23dp"
            android:drawableRight="@drawable/ic_call"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_border"
            android:textSize="24dp"/>


    </RelativeLayout>

</LinearLayout>