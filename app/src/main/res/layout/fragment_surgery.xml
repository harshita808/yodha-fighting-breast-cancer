<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#973961"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961">

        <TextView
            android:id="@+id/chemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sen"
            android:gravity="center_horizontal"
            android:text="Surgery"
            android:textColor="#FFB9BF"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chemo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sen"
            android:text="include a mastectomy, which removes the whole breast, and a lumpectomy, which removes only the tumor and the tissues around it."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/sen"
            android:text="Side Effects"
            android:textColor="#FFB9BF"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/sen"
            android:text="It may cause short-term pain, weakness in the arm muscles, tightness in the breast skin. Surgery involving the lymph nodes may also cause swelling in the arm."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/hover"
            android:fontFamily="@font/sen"
            android:elevation="5dp"
            android:text="FAQ'S regarding Surgery"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/call"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sen"
            android:text="You can also connect to our doctors to know more about Therapies for breast cancer by tapping on the call button"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/button_border"
            android:drawableRight="@drawable/ic_call"
            android:fontFamily="@font/sen_regular"
            android:paddingLeft="25dp"
            android:elevation="5dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:text=" Call  "
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />


    </RelativeLayout>
</LinearLayout>