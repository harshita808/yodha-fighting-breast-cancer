<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#973961">
    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TextView"
        android:textSize="50dp"
        android:layout_below="@id/toolbar"
        android:fontFamily="@font/sen"
        android:textAlignment="center"
        android:textColor="#FEF200"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"/>
    <TextView
        android:layout_below="@id/textView1"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Tex Note : These results doesn't actually mean that you have breast cancer Note : These results doesn't actually mean that you have breast cancer"
        android:fontFamily="@font/sen_regular"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_below="@id/textView2"
        android:id="@+id/note"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note : These results doesn't actually mean that you have breast cancer"
        android:textSize="18dp"
        android:textColor="#000000"
        android:fontFamily="@font/sen"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/call"
        android:layout_below="@id/note"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call  "
        android:fontFamily="@font/sen_regular"
        android:paddingLeft="42dp"
        android:paddingRight="22dp"
        android:drawableRight="@drawable/ic_call"
        android:layout_centerHorizontal="true"
        android:onClick="myPhone"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_border"
        android:textSize="20dp"/>
    <Button
        android:layout_below="@id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Know more about Breast Cancer "
        android:drawableRight="@drawable/ic_arr_right"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:paddingRight="20dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/sen"
        android:elevation="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:onClick="onClick"
        android:background="@drawable/hover"/>

</RelativeLayout>